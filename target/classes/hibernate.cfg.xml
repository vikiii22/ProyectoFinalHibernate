<?xml version="1.0" encoding="UTF-8" ?>
<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/hibernatefinal</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.show_sql">true</property>

        <mapping class="ad.persistence.domain.Cliente"/>
        <mapping class="ad.persistence.domain.Animal"/>
        <mapping class="ad.persistence.domain.Clinica_Veterinaria"/>
        <mapping class="ad.persistence.domain.Veterinario"/>
    </session-factory>
</hibernate-configuration>